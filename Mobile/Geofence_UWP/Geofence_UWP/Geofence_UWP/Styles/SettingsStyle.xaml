<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- http://osguni/?id=18330 -->
    
    <Style x:Key="Settingsou canStackPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="16,12,16,24" />
    </Style>
    
    <Style x:Key="SettingsTitle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style x:Key="SettingsSubtitle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="Margin" Value="0,12,0,0" />
    </Style>

</ResourceDictionary>
